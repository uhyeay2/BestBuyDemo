@model UpdateProductViewModel

<h2>Update @Model.Product.Name</h2>

@using (Html.BeginForm("UpdateProduct", "Product", "Post"))
{
    <!-- Header displaying product id -->
    <input asp-for="Product.Guid" type="hidden" value="@Model.Product.Guid" />

    <!-- Label for Name followed by input form for new Name. -->
    <label asp-for="Product.Name" class="form-control">Name</label>
    <input type="text" name="Product.Name" class="form-control" value="@Model.Product.Name" />

    <!-- Label for Price followed by input form for new Price. -->
    <label asp-for="Product.Price" class="form-control">Price</label>
    <input type="number" step="0.01" name="Product.Price" class="form-control" value="@Model.Product.Price" />

    <!-- Get new product category from list of all categories in the database.-->
    <div class="form-group">
        <label for="">Select a Category</label>
        <select class="form-control" name="Product.Category" value="">
            @foreach (var category in Model.CategoryNames)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>

    <!-- Submit button -->
    <input type="submit" value="Update Product" class="btn btn-primary" />
}
